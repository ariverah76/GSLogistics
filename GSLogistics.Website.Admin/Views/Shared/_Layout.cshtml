</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("GS Logistics", "List", "OrderAppointment", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            
            <div class="nav navbar-nav navbar-right">
                @Html.ActionLink("Sign Out", "Logout", "Account", null, new { @class = "navbar-brand" })
            </div>
            <div class="nav navbar-nav navbar-right">
                @{
                    var userContext = HttpContext.Current.Session["UserContext"] as GSLogistics.UserSecurity.GSLogisticsUserContext;
                    if (userContext != null)
                    {
                        <p class="navbar-text">Hello @userContext.UserName!</p>
                    }
                }
               
            </div>
            @*<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    @using (Html.BeginForm("LogOff", "Account", null, FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                    {
                    @Html.AntiForgeryToken()
                    }
                    <li>
                        <a href="javascript:document.getElementById('logoutForm').submit()">
                           Log out
                        </a>
                    </li>
                </ul>
            </div>*@
        </div>
   </div>

    <div class="container" id="container">
        @RenderBody()
     
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - GS Logistics LLC</p>
        </footer>
    </div>
    
    
    
