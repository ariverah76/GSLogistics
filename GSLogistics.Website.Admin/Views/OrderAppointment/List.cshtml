                                    {
                                        @Html.DatePicker(x => x.ShipFor, 0, new { @class = "form-control", @disabled = "disabled" })
                                    }
                                    else
                                    {
                                        @Html.DatePicker(x => x.ShipFor,0, new { @class = "form-control" })
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
